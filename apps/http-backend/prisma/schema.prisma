datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int     @id @default(autoincrement())
  name      String
  email     String  @unique
  image     String?
  createdAt DateTime @default(now())

  posts     Post[]
}

model Post {
  id        Int      @id @default(autoincrement())
  userId    Int
  content   String
  imageUrls String[]
  createdAt DateTime @default(now())
  location  String?
  likes     Int      @default(0)

  user User @relation(fields: [userId], references: [id])
}

