datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int     @id @default(autoincrement())
  name      String
  username  String  @unique
  email     String  @unique
  image     String?
  createdAt DateTime @default(now())

  posts     Post[]  @relation("UserPosts", fields: [], references: [])
}

model Post {
  id        Int      @id @default(autoincrement())
  username  String
  content   String
  imageUrls String[]
  createdAt DateTime @default(now())
  location  String?
  likes     Int      @default(0)

  user User @relation("UserPosts", fields: [username], references: [username])
}

